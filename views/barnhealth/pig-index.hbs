<div class="page-title">Pigs in barn: {{barn.name}}</div>

<div class="warehouse-filter">
    <div class="filter-group">
        <input type="text" id="searchPigTag" placeholder="Enter pig tag...">
    </div>
</div>

<div class="farmgo-card">
    <table class="farmgo-table">
        <thead>
            <tr>
                <th>Tag</th>
                <th>Birth Date</th>
                <th>Sex</th>
                <th>Status</th>
                <th>Vaccination</th>
                <th class="header-empty"></th>
            </tr>
        </thead>

        <tbody>
            {{#if pigs.length}}
                {{#each pigs}}
                    <tr>
                        <td>{{this.tag}}</td>
                        <td>{{formatDate this.birthDate}}</td>
                        <td>{{this.sex}}</td>
                        <td>{{this.status}}</td>
                        <td>{{#if vaccination}}Yes{{else}}No{{/if}}</td>
                        <td class="action-wrapper">
                            <span class="action-more">‚ãÆ</span>
                            <div class="action-menu">
                                <button class="btn-add-health-history" data-pig-id="{{this._id}}">Create</button>
                            </div>
                        </td>
                    </tr>
                {{/each}}
            {{else}}
                <tr>
                    <td colspan="6" style="text-align:center; color:#888;">
                        No pigs in this barn
                    </td>
                </tr>
            {{/if}}
        </tbody>
    </table>
</div>

<div id="healthHistoryModal" class="modal-overlay">
    <div class="modal-content">   
        <div class="header">
            <h2>Record barn health information</h2>
            <button class="close-btn" aria-label="ƒê√≥ng">&times;</button>
        </div>

        <form id="healthHistoryForm">
            <div class="form-body">

                <div class="form-grid">
                    <div class="form-group">
                        <label> Date of discovery <span class="required">*</span></label>
                        <input type="date" name="dateOfDiscovery">
                    </div>

                    <div class="form-group">
                        <label> Symptom <span class="required">*</span></label>
                        <input type="text" name="symptom" min="0">
                    </div>
                </div>

                <div class="form-grid">
                    <div class="form-group">
                        <label> Movement status</label>
                        <input type="text" name="movementStatus">
                    </div>
                    
                    <div class="form-group">
                        <label> Eating behavior</label>
                        <input type="text" name="eatingBehavior">
                    </div>

                    <div class="form-group">
                        <label> Water in take </label>
                        <input type="text" name="waterIntake">
                    </div>

                    <div class="form-group">
                        <label> Fever status </label>
                        <input type="text" name="feverStatus">
                    </div>

                    <div class="form-group">
                        <label> Humidity </label>
                        <input type="text" name="humidity">
                    </div>

                    <div class="form-group">
                        <label> Vaccination history </label>
                        <input type="text" name="vaccinationHistory" readonly>
                    </div>
                </div>

                <div class="form-group full-width">
                    <label>Note</label>
                    <textarea name="note"></textarea>
                </div>

            </div>

            <div class="footer">
                <button type="submit" class="save-btn">
                    <i class="fas fa-save"></i> Save
                </button>
            </div>
        </form>
    </div>
</div>

