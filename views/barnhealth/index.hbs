<div class="area-header">
        <h2 class="area-title">{{this.name}}</h2>

        <select id="filterAreaSelect">
            <option value="">Breeding area...</option>
            {{#each areas}}
                <option value="{{this._id}}"
                    {{#ifCond ../selectedAreaId this._id}}selected{{/ifCond}}>
                    {{this.name}}
                </option>
            {{/each}}
        </select>
</div>

{{#each areaData}}
<div class="area-block" data-area-id="{{this._id}}">
    <h2 class="area-title">{{this.name}}</h2>

    {{#each this.barns}}
    <div class="barn-card" data-barn-id="{{this._id}}">
        <div class="barn-header">
             <strong class="barn-name" data-barn-id="{{this._id}}">{{this.name}}</strong>
        </div>

        <div class="meal-header">
            <button class="btn-add-health" data-barn-id="{{this._id}}">
                <span class="icon">Ôºã</span> Create
            </button>
        </div>

        <div class="farmgo-card">
            <table class="farmgo-table">
                <thead>
                    <tr>
                        <th>Average weight</th>
                        <th>Loss</th>
                        <th>FaecesStatus</th>
                        <th>DateOfInspection</th>
                        <th>Note</th>
                        <th class="header-empty"></th>
                    </tr>
                </thead>

                <tbody>
                    {{#if this.healthRecords.length}}
                        {{#each this.healthRecords}}
                            <tr>
                                <td>{{averageWeight}}</td>
                                <td>{{loss}}</td>
                                <td>{{faecesStatus}}</td>
                                <td>{{formatDate dateOfInspection}}</td>
                                <td>{{note}}</td>
                                <td class="action-wrapper">
                                    <span class="action-more">‚ãÆ</span>
                                    <div class="action-menu">
                                        <button class="btn-edit" data-id="{{this._id}}">Edit</button>
                                        <button class="btn-delete" data-id="{{this._id}}">Delete</button>
                                    </div>
                                </td>
                            </tr>
                        {{/each}}
                    {{else}}
                        <tr>
                            <td colspan="5" style="text-align:center; color:#888;">
                                No health records yet
                            </td>
                            <td></td>
                        </tr>
                    {{/if}}
                </tbody>
            </table>
        </div>

    </div>
    {{/each}}
</div>
{{/each}}

<div id="healthModal" class="modal-overlay">
    <div class="modal-content">
            
        <div class="header">
            <h2>Record barn health information</h2>
            <button class="close-btn" aria-label="ƒê√≥ng">&times;</button>
        </div>

        <form id="healthForm">

            <div class="form-body">

                <div class="form-grid">
                    <div class="form-group">
                        <label>Average weight <span class="required">*</span></label>
                        <input type="number" name="averageWeight">
                    </div>

                    <div class="form-group">
                        <label>Loss <span class="required">*</span></label>
                        <input type="number" name="loss" min="0">
                    </div>
                </div>

                <div class="form-grid">
                    <div class="form-group">
                        <label>Faeces status <span class="required">*</span></label>
                        <input type="text" name="faecesStatus">
                    </div>
                    
                    <div class="form-group">
                        <label>Date Of Inspection <span class="required">*</span></label>
                        <input type="date" name="dateOfInspection">
                    </div>
                </div>

                <div class="form-group full-width">
                    <label>Note</label>
                    <textarea name="note"></textarea>
                </div>

            </div>

            <div class="footer">
                <button type="submit" class="save-btn">
                    <i class="fas fa-save"></i> Save
                </button>
            </div>

        </form>
    </div>
</div>

