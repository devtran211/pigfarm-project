<div class="page-title">Invoices</div>

<!-- FILTER SECTION -->
<div class="warehouse-filter">

    <div class="filter-group">
        <label>Invoice name</label>
        <input type="text" placeholder="Searching...">
    </div>

    <div class="filter-group">
        <label>Price</label>
        <div class="filter-input-icon">
            <input type="text" placeholder="Price">
            <span class="filter-icon">⚲</span>
        </div>
    </div>

    <div class="filter-group">
        <label>Supplier</label>
        <div class="filter-input-icon">
            <input type="text" placeholder="Supplier name">
            <span class="filter-icon">⚲</span>
        </div>
    </div>

    <div class="action-buttons">
        <button class="btn-farmgo"><span class="plus-icon">+</span> Create invoice </button>
    </div>

</div>

<!-- TABLE -->
<div class="table-wrapper">
    <table class="custom-table">
<thead>
    <tr>
        <th>Invoice name</th>
        <th>Total price</th>
        <th>Supplier</th>
        <th>Payment status</th>
        <th>Creation date</th>
        <th></th>
    </tr>
</thead>

<tbody>
    {{#each items}}
    <tr class="invoice-row {{#if this.isDelete}}deleted-row{{/if}}" data-id="{{this._id}}">
        <td>
            <strong>{{this.name}}</strong><br>
        </td>

        <td>{{formatMoney this.total}}</td>

        <td>
            {{#if this.supplier}}
                {{this.supplier.name}}
            {{else}}
                ---
            {{/if}}
        </td>

        <td>
            {{#if (eq this.payment_status "paid")}}
                <span class="status-label status-progress">Paid</span>
            {{else}}
                <span class="status-label status-closed">Unpaid</span>
            {{/if}}
        </td>

        <td>{{formatDate this.creation_date}}</td>

        <td class="action-wrapper">
            <span class="action-more">⋮</span>
            <div class="action-menu">
                <button class="btn-detail" data-id="{{this._id}}">Detail</button>
                <button class="btn-delete" data-id="{{this._id}}">Delete</button>
            </div>
        </td>
    </tr>
    {{/each}}
</tbody>
</table>
</div>

<div id="invoiceOverlay">
    <div id="createInvoiceModal" class="container">
            <button class="close-btn" aria-label="Đóng">&times;</button>
            
            <h2>Create Invoice</h2>

            <div class="main-form-group">
                <label for="invoice-name">Invoice name <span style="color:red">*</span></label>
                <input type="text" id="name" placeholder="Enter invoice name">
            </div>

            <hr style="border: 0; border-top: 1px solid #eee; margin: 30px 0;">

            <div class="import-section">
                <h3>Import breeding</h3>
                
                <div class="import-header-row">
                    <select name="select-breeding">
                        <option>Select breeding</option>
                    </select>
                </div>
                
                <div class="import-detail-fields">
                    <input type="text" name="price[]" placeholder="Price">
                    <input type="text" name="quantity[]" placeholder="Quantity">
                </div>
                
                <div class="import-action-group">
                    <button class="add-btn">+ Add</button>
                    
                </div>
            </div>

            <div class="import-section">
                <h3>Import food</h3>
                <div class="import-header-row">
                    <select name="select-food">
                        <option>Import food</option>
                    </select>
                </div>
                
                <div class="import-detail-fields">
                    <input type="text" name="price[]" placeholder="Price">
                    <input type="text" name="quantity[]" placeholder="Quantity">
                </div>
                
                <div class="import-action-group">
                    <button class="add-btn">+ Add</button>
                    
                </div>
            </div>

            <div class="import-section">
                <h3>Import medition</h3>
                <div class="import-header-row">
                    <select name="select-medition">
                        <option>Import medition</option>
                    </select>
                </div>
                
                <div class="import-detail-fields">
                    <input type="text" name="price[]" placeholder="Price">
                    <input type="text" name="quantity[]" placeholder="Quantity">
                </div>
                
                <div class="import-action-group">
                    <button class="add-btn">+ Add</button>
                    
                </div>
            </div>

            <div class="main-form-group">
                <label for="invoice-name">Discount <span style="color:red">*</span></label>
                <input type="text" name="discount" id="discount-total" placeholder="Enter discount">
            </div>

            <div class="total-footer-group">
                <button class="update-price-btn">Update price</button>
                <div class="total-info">
                    Total: 0.00
                </div>
            </div>

            <div class="main-form-group">
                <label for="payment-status">Payment status <span style="color:red">*</span></label>
                <select name="payment_status" id="payment-status">
                    <option>Partial</option>
                </select>
            </div>

            <div class="main-form-group">
                <label for="supplier">Supplier <span style="color:red">*</span></label>
                <select name="supplier" id="supplier">
                    <option>-- Select supplier --</option>
                </select>
            </div>

            <div class="footer-action">
                <button class="submit-btn">Thêm</button>
            </div>

    </div>
</div>


