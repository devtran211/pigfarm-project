<div class="page-title">Health history</div>

<div class="warehouse-filter">
    <div class="filter-group">
        <label>Search pig tag</label>
        <input type="text" id="searchPigTag" placeholder="Enter pig tag...">
    </div>

    <div class="filter-group">
        <label>Status</label>
        <input type="text" id="searchPigTag" placeholder="Enter pig status...">
    </div>
</div>

<div class="farmgo-card">
    <table class="farmgo-table">
        <thead>
            <tr>
                <th>Tag</th>
                <th>Birth Date</th>
                <th>Sex</th>
                <th>Status</th>
                <th>Vaccination</th>
                <th class="header-empty"></th>
            </tr>
        </thead>

        <tbody>
            {{#if pigs.length}}
                {{#each pigs}}
                    <tr data-pig-id="{{this._id}}">
                        <td>{{this.tag}}</td>
                        <td>{{formatDate this.birthDate}}</td>
                        <td>{{this.sex}}</td>
                        <td>{{this.status}}</td>
                        <td>{{#if vaccination}}Yes{{else}}No{{/if}}</td>
                    </tr>
                {{/each}}
            {{else}}
                <tr>
                    <td colspan="6" style="text-align:center; color:#888;">
                        No pigs in this barn
                    </td>
                </tr>
            {{/if}}
        </tbody>
    </table>
</div>

<script src="/js/health-history.js"></script>

