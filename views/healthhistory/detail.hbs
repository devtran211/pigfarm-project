<div class="container">

    <div class="section">
        <h2>Health History</h2>

        <span style="font-size: 14px"><strong>Pig tag:</strong> {{pig.tag}}</span><br><br>
        <span style="font-size: 14px"><strong>Sex:</strong> {{pig.sex}}</span><br><br>

        {{#each histories}}
            <div class="data-label">
                <div class="record-item"><strong>Discovery date:</strong> {{formatDate this.dateOfDiscovery}}</div>
                <div class="record-item"><strong>Recovery date:</strong> {{formatDate this.dateOfRecovery}}</div>
                <div class="record-item"><strong>Result:</strong> {{#if this.result}} Dead {{else}} Recovered {{/if}}</div>
                <div class="record-item"><strong>Symptom:</strong> {{this.symptom}}</div>
                <div class="record-item"><strong>Movement:</strong> {{this.movementStatus}}</div>
                <div class="record-item"><strong>Eating behavior:</strong> {{this.eatingBehavior}}</div>
                <div class="record-item"><strong>Water intake:</strong> {{this.waterIntake}}</div>
                <div class="record-item"><strong>Humidity:</strong> {{this.humidity}}</div>
                <div class="record-item"><strong>Note:</strong> {{this.note}}</div>
            </div>

            <div class="button-group">
                <button class="action-button update" data-id="{{this._id}}">Update</button>
                <button class="action-button delete" data-id="{{this._id}}">Delete</button>
            </div>

            <hr class="divider">
        {{/each}}
    </div>

</div>

<div id="editHealthHistoryModal" class="modal-overlay">
    <div class="modal-content">   
        <div class="header">
            <h2>Edit health record</h2>
            <button class="close-btn" aria-label="ƒê√≥ng">&times;</button>
        </div>

        <form id="editHealthHistoryForm">
            <div class="form-body">

                <div class="form-grid">
                    <div class="form-group">
                        <label> Date of discovery <span class="required">*</span></label>
                        <input type="date" name="dateOfDiscovery">
                    </div>

                    <div class="form-group">
                        <label> Date of recovery <span class="required">*</span></label>
                        <input type="date" name="dateOfRecovery">
                    </div>

                    <div class="form-group">
                        <label> Result <span class="required">*</span></label>
                        <select name="result">
                            <option value="">-- Select Result --</option>
                            <option value="false">Revovered</option>
                            <option value="true">Dead</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label> Symptom <span class="required">*</span></label>
                        <input type="text" name="symptom" min="0">
                    </div>
                </div>

                <div class="form-grid">
                    <div class="form-group">
                        <label> Movement status</label>
                        <input type="text" name="movementStatus">
                    </div>
                    
                    <div class="form-group">
                        <label> Eating behavior</label>
                        <input type="text" name="eatingBehavior">
                    </div>

                    <div class="form-group">
                        <label> Water in take </label>
                        <input type="text" name="waterIntake">
                    </div>

                    <div class="form-group">
                        <label> Fever status </label>
                        <input type="text" name="feverStatus">
                    </div>

                    <div class="form-group">
                        <label> Humidity </label>
                        <input type="text" name="humidity">
                    </div>

                    <div class="form-group">
                        <label> Vaccination history </label>
                        <input type="text" name="vaccinationHistory" readonly>
                    </div>
                </div>

                <div class="form-group full-width">
                    <label>Note</label>
                    <textarea name="note"></textarea>
                </div>

            </div>

            <div class="footer">
                <button type="submit" class="save-btn">
                    <i class="fas fa-save"></i> Save
                </button>
            </div>
        </form>
    </div>
</div>

