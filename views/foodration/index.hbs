{{#each areaData}}

<div class="area-block" data-area-id="{{this._id}}">

    <div class="area-header">    
        <h2 class="area-title">{{this.name}}</h2>

        <div class="meal-header">
            <button class="btn-add-meal-area">
                <span class="icon">＋</span> Create
            </button>
        </div>
    </div>

    {{#each this.barns}}

    <div class="barn-card" data-barn-id="{{this._id}}">

        <div class="barn-header">
            <strong>{{this.name}}</strong>
        </div>

        <div class="meal-header">
            <button class="btn-add-meal-barn">
                <span class="icon">＋</span> Create
            </button>
        </div>

        <div class="farmgo-card">
            <table class="farmgo-table">
            <thead>
                <tr>
                    <th>Ration name</th>
                    <th>Numb of meals/ day</th>
                    <th>Start date</th>
                    <th>End date</th>
                    <th>Total (Kg)</th>
                    <th class="header-empty"></th>
                </tr>
            </thead>

            <tbody>

                {{#if this.rations.length}}

                    {{#each this.rations}}
                        <tr>
                            <td>{{this.name}}</td>
                            <td>{{this.number_of_feedings_per_day}}</td>
                            <td>{{formatDate this.start_time}}</td>
                            <td>{{formatDate this.end_time}}</td>
                            <td>{{this.total}}</td>  
                            <td class="action-wrapper">
                            <span class="action-more">⋮</span>
                                <div class="action-menu">
                                    <button class="btn-detail" data-id="{{this._id}}">Detail</button>
                                    <button class="btn-edit" data-id="{{this._id}}">Edit</button>
                                    <button class="btn-delete" data-id="{{this._id}}">Delete</button>
                                </div>
                            </td>
                        </tr>
                    {{/each}}

                {{else}}
                    <tr>
                        <td colspan="5" style="text-align:center; color:#888;">
                            No food rations yet
                        </td>
                        <td></td>
                    </tr>
                {{/if}}
            </tbody>
        </table>
        </div>
    </div>
    {{/each}}
</div>
{{/each}}

