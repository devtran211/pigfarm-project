<h1>Establish a medication regimen</h1>

<div class="warehouse-filter">

    <div class="warehouse-filter">
        <div class="filter-group">
            <select id="filterAreaSelect" name="area">
                <option value="">All breeding areas...</option>
                {{#each areas}}
                    <option value="{{this._id}}" {{#ifCond ../selectedAreaId this._id}}selected{{/ifCond}}>
                        {{this.name}}
                    </option>
                {{/each}}
            </select>
        </div>
    </div>


    {{!-- <div class="filter-group">
        <label>Price</label>
        <div class="filter-input-icon">
            <input type="text" placeholder="Giá tiền">
            <span class="filter-icon">⚲</span>
        </div>
    </div> --}}
</div>

{{#each areaData}}

<div class="area-block" data-area-id="{{this._id}}">
    
    <div class="area-header">
        <h2 class="area-title">{{this.name}}</h2>


        <div class="meal-header">
            <button class="btn-add-drug-area" data-area-id="{{this._id}}">
                <span class="icon">＋</span> Create
            </button>
        </div>
    </div>

    {{!-- Loop Barns --}}
    {{#each this.barns}}

    <div class="barn-card" data-barn-id="{{this._id}}">

        <div class="barn-header">
            <strong>{{this.name}}</strong>
        </div>

        <div class="meal-header">
            <button class="btn-add-drug" data-barn-id="{{this._id}}">
                <span class="icon">＋</span> Create
            </button>
        </div>

        <div class="farmgo-card">
            <table class="farmgo-table">
                <thead>
                    <tr>
                        <th>Start date</th>
                        <th>End date</th>
                        <th>Reason</th>
                        <th>Note</th>
                        <th class="header-empty"></th>
                    </tr>
                </thead>

                <tbody>

                    {{#if this.rations.length}}

                        {{#each this.rations}}
                            <tr class="drug-use-row" data-id="{{this._id}}">
                                <td>{{formatDate this.start_date}}</td>
                                <td>{{formatDate this.end_date}}</td>
                                <td>{{this.reason}}</td>
                                <td>{{this.note}}</td>
                                <td class="action-wrapper">
                                    <span class="action-more">⋮</span>
                                    <div class="action-menu">
                                        <button class="btn-detail" data-id="{{this._id}}">Detail</button>
                                        <button class="btn-edit" data-id="{{this._id}}">Edit</button>
                                        <button class="btn-delete" data-id="{{this._id}}">Delete</button>
                                    </div>
                                </td>
                            </tr>
                        {{/each}}

                    {{else}}
                        <tr>
                            <td colspan="4" style="text-align:center; color:#888;">
                                No drug uses yet
                            </td>
                            <td></td>
                        </tr>
                    {{/if}}

                </tbody>
            </table>
        </div>

    </div>

    {{/each}}
</div>

{{/each}}


<dv id="medicationModal" class="modal-overlay">
<div class="modal-box">

        <div class="modal-header">
            <span>Set up a medication regimen</span>
            <span class="modal-close">&times;</span>
        </div>

        <form id="medicationForm">

            <input type="hidden" name="barnId" id="rationBarnId">

            <div class="form-group">
                <label>Select barn</label>
                <select class="input-select small" name="barn">
                    <option value=""></option>
                </select>
            </div>

            <div class="form-group">
                <label>Start date *</label>
                <input type="date" name="start_date" required>
            </div>

            <div class="form-group">
                <label>End date *</label>
                <input type="date" name="end_date" class="input-shorter" required>
            </div>

            <div class="form-group">
                <label>Reason *</label>
                <input type="text" name="reason" class="input" required>
            </div>

            <div class="popup-section">
                <h4 class="section-title">Add medications</h4>

                <div id="medicine-list">
                    <div class="medicine-row">

                        <input type="text" name="time[]" class="input-small" placeholder="Meal">

                        <select class="input-select" name="medition_warehouse[]">
                            <option value="" >Select medition</option>
                        </select>

                        <input type="text" class="input-select small" name="method[]" placeholder="Method">

                        <input type="text" class="input-small" name="dosage[]" placeholder="Dosage">

                        <select class="input-select" name="dosage_unit[]">
                            <option value="l">l</option>
                            <option value="ml">ml</option>
                            <option value="g">g</option>
                        </select>

                        <button type="button" class="btn-remove-row">−</button>
                    </div>
                </div>

                <button type="button" id="add-medicine-row" class="btn-add-row">+ Add</button>

            </div>

            <div class="modal-actions">
                {{!-- <button type="button" class="btn-cancel modal-close">Hủy</button> --}}
                <button type="submit" class="btn-save">Save</button>
            </div>
        </form>
</div>
</div>

