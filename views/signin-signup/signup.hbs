<div class="left-section">
    <div class="slogan">We are here to help farmers.</div>
    {{!-- <img src="/public/img/signin-pic.jpg" alt="Farm products" class="slogan-image"> --}}
    <div class="illustration-wrapper">
        <div class="illustration"></div>
    </div>
</div>

<div class="right-section">
    <div class="form-header">
        <h2>Sign up to PigGo</h2>
        <p>Already a member? <a href="/auth/login">Log in</a></p>
    </div>

    <form action="/auth/register" method="POST">

        <div class="form-group">
            <label for="name">Your name</label>
            <div class="input-wrapper">
                <input type="text" id="name" name="name" placeholder="Your full name">
            </div>
        </div>

        <div class="form-group">
            <label for="email">E-mail</label>
            <div class="input-wrapper">
                <input type="email" id="email" name="email" placeholder="name@mail.com">
                <span class="input-suffix">@</span>
            </div>
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <div class="input-wrapper">
                <input type="password" id="password" name="password" placeholder="6+ characters, +1 capital letter">
            </div>
            <div class="password-info">
                Password must have at least 8 characters and 1 uppercase letter <span class="icon">&#9;</span>
            </div>
        </div>

        <button class="button-primary" type="submit">create an account</button>
    </form>

    <div class="recaptcha-info">
        This site is protected by reCAPTCHA and the google <br>
        <a href="#">Privacy Policy</a> and <a href="#">Terms of Service</a> apply.
    </div>
</div>

{{#if errors}}
<script>
    let messages = "";
    {{#each errors}}
        messages += "- {{this.msg}} \n";
    {{/each}}
    alert(messages);
</script>
{{/if}}

