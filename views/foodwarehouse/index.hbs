<div class="page-title">Bran Warehouse</div>

<!-- FILTER SECTION -->
<div class="warehouse-filter">

    <div class="filter-group">
        <label>Product name</label>
        <input type="text" id="search-name" placeholder="Searching...">
    </div>

    <div class="filter-group">
        <label>Price</label>
        <div class="filter-input-icon">
            <input type="text" id="search-price" placeholder="Price">
            <span class="filter-icon">⚲</span>
        </div>
    </div>

    <div class="filter-group">
        <label>Inventory</label>
        <div class="filter-input-icon">
            <input type="text" id="search-inventory" placeholder="Quantity">
            <span class="filter-icon">⚲</span>
        </div>
    </div>

    <div class="action-buttons">
        <button class="btn-farmgo"><span class="plus-icon">+</span> Create invoice</button>
        <button id="openCreateModal" class="btn-farmgo"><span class="plus-icon">+</span> Create item</button>
    </div>

</div>

<!-- TABLE -->
<div class="table-wrapper">
    <table class="custom-table">
<thead>
    <tr>
        <th>Product name</th>
        <th>Price</th>
        <th>Inventory</th>
        <th>Specifications</th>
        <th>Date of manufacture</th>
        <th>Expiry</th>
        <th></th>
    </tr>
</thead>

<tbody>
    {{#each items}}
    <tr>
        <td>
            <strong>{{this.name}}</strong><br>
        </td>

        <td>{{formatMoney this.import_price}}</td>

        <td>{{this.inventory}}</td>

        <td>{{this.weight}} {{this.unit}}</td>

        <td>{{formatDate this.date_of_manufacture}}</td>

        <td>{{formatDate this.expiry}}</td>

        <td class="action-wrapper">
            <span class="action-more">⋮</span>
            <div class="action-menu">
                <button class="btn-edit" data-id="{{this._id}}">Edit</button>
                <button class="btn-delete" data-id="{{this._id}}">Delete</button>
            </div>
        </td>
    </tr>
    {{/each}}
</tbody>
</table>
</div>

<div id="createItemModal" class="modal-overlay">
    <div class="modal-content">
            
        <div class="header">
            <h2>Create a new item</h2>
            <button class="close-btn" aria-label="Đóng">&times;</button>
        </div>

        <form action="/food-warehouse/create" method="POST">
                <div class="form-body">
                    
                    <div class="form-grid">
                        <div class="form-group">
                            <label>Name <span class="required">*</span></label>
                            <input type="text" name="name">
                        </div>

                        <div class="form-group">
                            <label>Weight <span class="required">*</span></label>
                            <input type="text" name="weight">
                        </div>
                        
                        <div class="form-group">
                            <label>Unit <span class="required">*</span></label>
                            <div class="input-with-icon">
                                <select name="unit">
                                    <option value="Kg">Kg</option>
                                    <option value="G">G</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-grid">
                        <div class="form-group">
                            <label>Protein content</label>
                            <input type="text" name="protein_content">
                        </div>
                        
                        <div class="form-group">
                            <label>Energy content<span class="required">*</span></label>
                            <input type="text" name="energy_content">
                        </div>

                        <div class="form-group">
                            <label>Date of manufacture<span class="required">*</span></label>
                            <input type="date" name="date_of_manufacture">
                        </div>

                        <div class="form-group">
                            <label>Expiry<span class="required">*</span></label>
                            <input type="date" name="expiry">
                        </div>
                    </div>

                    <div class="form-group full-width">
                        <label>Note</label>
                        <textarea name="note"></textarea>
                    </div>

                </div>

                <div class="footer">
                    <button class="save-btn">
                        <i class="fas fa-save"></i> &#x1F4BE; Save
                    </button>
                </div>
        </form>
    </div>
</div>

