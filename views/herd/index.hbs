        <th>Name</th>
        <th>Type</th>
        <th>Price</th>
        <th>Inventory</th>
        <th>dateOfEntry</th>
        <th></th>
    </tr>
</thead>

<tbody>
    {{#each herds}}
    <tr class="herd-row" data-id="{{this._id}}">
        <td>
            <strong>{{this.name}}</strong><br>
        </td>

        <td>{{this.type}}</td>

        <td>{{formatMoney this.importPrice}}</td>

        <td>{{this.inventory}}</td>

        <td>{{formatDate this.dateOfEntry}}</td>

        <td class="action-wrapper">
            <span class="action-more">⋮</span>
            <div class="action-menu">
                <button class="btn-edit" data-id="{{this._id}}">Edit</button>
                <button class="btn-detail" data-id="{{this._id}}">Detail</button>
                <button class="btn-delete" data-id="{{this._id}}">Delete</button>
            </div>
        </td>
    </tr>
    {{/each}}
</tbody>
</table>
