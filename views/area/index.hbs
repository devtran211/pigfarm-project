<div class="area-container">

    <div class="area-header">
        <h2>Area list</h2>

        <button class="btn-create-area" id="openCreateModal">+ Create</button>
    </div>

    <div class="filter-row">

        <div class="filter-item">
            <label>Name</label>
            <input type="text" placeholder="Search..." id="searchAreaByName">
        </div>

        <div class="filter-item">
            <label>Number of barns</label>
            <div class="filter-number-wrapper">
                <input type="text" placeholder="Searching..." id="searchAreaByBarnCount">
            </div>
        </div>

        <div class="filter-item">
            <label>Type</label>
            <select id="searchAreaByType">
                <option value="">-- Select type --</option>
                <option value="Boar">Boar</option>
                <option value="Gestation">Gestation</option>
                <option value="Farrowing">Farrowing</option>
                <option value="Weaning">Weaning</option>
                <option value="Gilt Development">Gilt Development</option>
                <option value="Fattening">Fattening</option>
                <option value="Isolation">Isolation</option>
                <option value="Treatment">Treatment</option>
                <option value="Restricted">Restricted</option>
            </select>
        </div>

        <div class="filter-item">
            <label>Status</label>
            <select id="searchAreaByStatus">
                <option value="">-- Select status --</option>
                <option value="Active">Active</option>
                <option value="Empty">Empty</option>
                <option value="Cleaning">Cleaning</option>
                <option value="Disinfecting">Disinfecting</option>
                <option value="Inactive">Inactive</option>
            </select>
        </div>

        <div class="filter-item">
            <label>Creation date</label>
            <input type="date" id="searchAreaByDate">
        </div>
    </div>

    <table class="area-table">
        <thead>
            <tr>
                <th>Area</th>
                <th>Number of barns</th>
                <th>Acreage (m2)</th>
                <th>Type</th>
                <th>Status</th>
                <th>Creation date</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            {{#each area}}
            <tr class="area-row" data-id="{{this._id}}">
                <td>{{this.name}}</td>
                <td>{{this.numberOfBarns}} ({{this.total_barns}} barns in use)</td>
                <td>{{this.acreage}}</td>
                <td>{{this.type}}</td>
                <td>{{this.status}}</td>
                <td>{{formatDate this.creationDate}}</td>
                <td class="action-cell">
                <div class="action-wrapper">
                    <span class="action-more">‚ãÆ</span>

                    <div class="action-menu">
                        <button class="btn-edit" data-id="{{this._id}}">‚úè Edit</button>
                        <button class="btn-delete" data-id="{{this._id}}">üóë Delete</button>
                    </div>
                </div>
            </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

