<div id="currentArea" data-id="{{area._id}}"></div>
<div class="page-title">Barn list – Area {{area.name}}</div>

<div class="barn-filter-header">

    <div class="barn-filter-left">

        <div class="filter-group">
            <label>Name</label>
            <input type="text" placeholder="Searching..." id="searchBarnByName">
        </div>

        <div class="filter-group">
            <label>Number of pigss</label>
            <div class="filter-input-icon">
                <input type="number" placeholder="Searching..." id="searchBarnByPigCount">
                <span class="filter-icon">⚲</span>
            </div>
        </div>

        <div class="filter-group">
            <label>Status</label>
            <div class="custom-select">
                <select id="searchBarnByStatus">
                    <option value="">-- Select status --</option>
                    <option value="Active">Active</option>
                    <option value="Empty">Empty</option>
                    <option value="Cleaning">Cleaning</option>
                    <option value="Disinfecting">Disinfecting</option>
                    <option value="Inactive">Inactive</option>
                </select>
                <span class="select-arrow">▼</span>
            </div>
        </div>

        <div class="filter-group">
            <label>Creation date</label>
            <input type="date" id="searchBarnByDate" placeholder="Tìm kiếm...">
        </div>
    </div>

    <button class="btn-create-barn">+ Create</button>

</div>

<table class="custom-table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Acreage</th>
            <th>Total pigs</th>
            <th>Maximum capacity</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        {{#each barns}}
            {{log barns}}
            <tr class="barn-row" data-id="{{_id}}">
                <td>{{this.name}}</td>
                <td>{{this.acreage}}</td>
                <td>{{this.total_pigs}}</td>
                <td>{{this.maximumCapacity}}</td>
                <td>{{this.status}}</td>
                <td class="action-wrapper">
                    <span class="action-more">⋮</span>
                    <div class="action-menu">
                        <button class="btn-edit" data-id="{{this._id}}">Edit</button>
                        <button class="btn-delete" data-id="{{this._id}}">Delete</button>
                    </div>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>

<div id="createBarnModal" class="modal-overlay">
    <div class="modal-content">
        
        <div class="header">
            <h2>Create a new barn</h2>
            <button class="close-btn" aria-label="Close">&times;</button>
        </div>

        <div class="form-body">
            
            <form>
                    <div class="form-grid">
                        <div class="form-group">
                            <label> Name <span class="required">*</span></label>
                            <input type="text" name="name">
                        </div>

                        <div class="form-group">
                            <label> Acreage (m2) <span class="required">*</span></label>
                            <input type="text" name="acreage">
                        </div>  
                
                        <div class="form-group">
                            <label> Maximum capacity <span class="required">*</span></label>
                            <input type="text" name="maximumCapacity">
                        </div>  
                    </div>

                    <div class="form-grid">	
                        <div class="form-group">
                            <label> Status <span class="required">*</span></label>
                                <select name="status">
                                    <option value="">-- Select status --</option>
                                    <option value="Active">Active</option>
                                    <option value="Empty">Empty</option>
                                    <option value="Cleaning">Cleaning</option>
                                    <option value="Disinfecting">Disinfecting</option>
                                    <option value="Inactive">Inactive</option>			
                                </select>
                        </div>
                        
                        <div class="form-group">
                            <label> Creation date <span class="required">*</span></label>
                            <input type="date" name="creationDate">
                        </div>
                    </div>

                    <div class="form-group full-width">
                        <label>Note</label>
                        <textarea name="note"></textarea>
                    </div>
                </div>   

                <div class="footer">
                    <button type="button" class="save-btn">
                        <i class="fas fa-save"></i> &#x1F4BE; Save
                    </button>
                </div>
            </form> 
    </div>
</div>

